<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="#FF000000" />
            <solid android:color="@color/white" />

        </shape>
    </item>

    <item android:top="0.1dp" android:bottom="0.1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="0.1dp" android:color="@color/grey" />
            <solid android:color="@color/blue50" />
        </shape>
    </item>

</layer-list>